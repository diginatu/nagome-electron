{
    "name": "nagome-electron",
    "version": "1.0.2",
    "description": "Electron packege of Nagome Web UI",
    "author": {
        "name": "Diginatu",
        "email": "diginatu.510o@gmail.com"
    },
    "license": "MIT",
    "main": "app/main.js",
    "build": {
        "appId": "com.github.diginatu.nagome-electron",
        "files": [
            "app/**/*",
            "node_modules/**/*",
            "package.json",
            "images/icon.png"
        ],
        "directories": {
            "buildResources": "resources"
        },
        "extraResources": [
            {
                "from": "./resources/system/${os}/${arch}",
                "to": "./extra",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "./resources/webui",
                "to": "./extra/webui",
                "filter": [
                    "**/*"
                ]
            },
            "./server_config.json"
        ],
        "publish": {
            "provider": "github"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "mac": {
            "category": "public.app-category.social-networking",
            "target": [
                {
                    "target": "zip",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "linux": {
            "category": "Network",
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "tar.xz",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        }
    },
    "scripts": {
        "download": "./scripts/download_binaries.sh",
        "start": "electron .",
        "build-current-dir": "./scripts/release.sh --dir",
        "build-dir": "./scripts/release.sh -wlm --dir",
        "build": "./scripts/release.sh -wlm",
        "release": "./scripts/release.sh -wlm --publish always"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/diginatu/nagome-electron.git"
    },
    "keywords": [
        "Nagome",
        "Niconico",
        "NicoNama",
        "Comment Viewer"
    ],
    "devDependencies": {
        "download-github-release": "^0.3.2",
        "electron": "~5.0.1",
        "electron-builder": "^20.40.2"
    },
    "dependencies": {
        "electron-is-dev": "^1.1.0",
        "electron-log": "^3.0.5",
        "electron-updater": "^4.0.6"
    }
}
