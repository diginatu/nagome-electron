{
    "name": "nagome-electron",
    "version": "0.1.0",
    "description": "Electron packege of Nagome Web UI",
    "author": {
        "name": "Diginatu",
        "email": "diginatu.510o@gmail.com"
    },
    "license": "MIT",
    "main": "app/main.js",
    "build": {
        "appId": "com.github.diginatu.nagome-electron",
        "files": [
            "app/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "resources"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "mac": {
            "category": "public.app-category.social-networking",
            "target": [
                {
                    "target": "zip",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "linux": {
            "category": "Network",
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "tar.xz",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "publish": null
    },
    "scripts": {
        "start": "electron .",
        "release": "./RELEASE.sh"
    },
    "repository" : {
        "type": "git",
        "url": "https://github.com/diginatu/nagome-electron.git"
    },
    "keywords": [
        "Nagome",
        "Niconico",
        "NicoNama",
        "Comment Viewer"
    ],
    "devDependencies": {
        "download-github-release": "^0.3.2",
        "electron": "~1.7.8",
        "electron-builder": "^19.45.5"
    }
}
